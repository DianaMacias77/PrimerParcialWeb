<h1>Add a new rifa</h1>
<form method="POST" action="/rifas">
    <div>
        <div>
            <label for="ticket">Ticket: </label>
            <input type="text" id="ticket" name="ticket" ticket="ticket">
        </div>
        <div>
            <label for="name">Nombre: </label>
            <input type="text" id="name" name="name">
        </div>
        <div>
            <label for="correo">Correo: </label>
            <input type="text" id="correo" name="correo" correo="correo">
        </div>
        <div>
            <label for="telefono">Telefono: </label>
            <input type="text" id="telefono" name="telefono" telefono="telefono">
        </div>
        <div>
             <label for="gift">Gift: </label>
            <input type="text" id="gift" name="gift" gift="gift">
        </div>
    </div>
    <div>
        <input type="submit" value="Store">
    </div>
</form> 